#!/bin/bash

echo ""
echo "+---------+"
echo "| PHP 7.0 |"
echo "+---------|"
echo ""

sudo phpdismod rdkafka                                > /dev/null

sudo update-alternatives --set php /usr/bin/php7.0    > /dev/null

sudo pecl config-set php_ini /etc/php/7.0/cli/php.ini > /dev/null
sudo pecl config-set ext_dir /usr/lib/php/20151012    > /dev/null
sudo pecl config-set bin_dir /usr/bin/                > /dev/null
sudo pecl config-set php_bin /usr/bin/php7.0          > /dev/null
sudo pecl config-set php_suffix 7.0                   > /dev/null

sudo pecl uninstall rdkafka                           > /dev/null
sudo pecl install rdkafka                             > /dev/null
sudo phpenmod rdkafka                                 > /dev/null

php -v
echo ""
