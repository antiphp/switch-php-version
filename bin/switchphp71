#!/bin/bash

echo ""
echo "+---------+"
echo "| PHP 7.1 |"
echo "+---------|"
echo ""

sudo phpdismod rdkafka mongodb redis
sudo pecl uninstall rdkafka mongodb redis

sudo apt install php7.1
sudo update-alternatives --set php /usr/bin/php7.1

sudo pecl config-set php_ini /etc/php/7.1/cli/php.ini
sudo pecl config-set ext_dir /usr/lib/php/20160303
sudo pecl config-set bin_dir /usr/bin/
sudo pecl config-set php_bin /usr/bin/php7.1
sudo pecl config-set php_suffix 7.1
sudo pear config-set temp_dir /tmp/pear/temp_7.1

# use right phpize
sudo apt remove -y php-dev php5.6 php7.1 php7.1 php7.2 php7.3
sudo rm -rf /usr/bin/phpize
sudo apt install php7.1-dev

# rdkafka
cd /tmp
rm -rf librdkafka && \
    git clone https://github.com/edenhill/librdkafka.git && \
    cd librdkafka && \
    git checkout tags/v0.11.0 && \
    ./configure && \
    make && \
    sudo make install && \
    cd ../
rm -rf php-rdkafka && \
    git clone https://github.com/arnaud-lb/php-rdkafka.git && \
    cd php-rdkafka/ && \
    git checkout tags/3.0.3 && \
    phpize7.1 && \
    ./configure && \
    make && \
    sudo make install && \
    cd ../
sudo phpenmod rdkafka

# mongo
sudo pecl install mongodb
sudo phpenmod mongodb

# redis
echo no | sudo pecl install redis
sudo phpenmod redis

echo "+---------------------------------------------------------------------------------------------+"
php -v
echo "+---------------------------------------------------------------------------------------------+"
php -i | grep -E "Redis|Mongo|rdkafka"
echo ""
